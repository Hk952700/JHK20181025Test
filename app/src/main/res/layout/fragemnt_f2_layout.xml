<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/f2_lin"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/border_shape"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/f2_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/zoom" />

        <EditText
            android:text="uid=21021"
            android:id="@+id/f2_edit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="9" />
    </LinearLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/f2_re"
        android:layout_above="@+id/f2_lin2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/f2_lin">

    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:background="@drawable/border_shape"
        android:id="@+id/f2_lin2"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="horizontal">
        <CheckBox
            android:textSize="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:checked="false"
            android:text="全选"
            android:id="@+id/f2_che"
            />

        <TextView
            android:id="@+id/f2_text"
            android:text="合计:0.00元"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"/>
        <Button
            android:id="@+id/f2_btn"
            android:gravity="center"
            android:text="去结算(0)"
            android:textColor="#ffffff"
            android:background="#ff0000"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"/>


    </LinearLayout>

</RelativeLayout>